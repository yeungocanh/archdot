for_window [class="(?i)pavucontrol"] floating enable, border normal, move position mouse

# kill focused window
bindsym $mod+Shift+q kill

# Fix graphics glitch
new_window none

# start rofi (program launcher)
bindsym $mod+d exec --no-startup-id rofi -font "Iosevka Term 12" -show run
# start rofi (window switcher)
bindsym $mod+Shift+d exec --no-startup-id rofi -show window -font "Iosevka Term 12"
